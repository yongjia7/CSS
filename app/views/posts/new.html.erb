<h1>New Post</h1>

<% if @current_user %>
  <%= form_with model: @post do |form| %>
    <p>
      <%= form.label "body" %>
      <%= form.text_field "body" %>
    </p>

    <p>
      <%= form.label "image" %>
      <%= form.text_field "image" %>
    </p>

    <p><%= form.submit %></p>
  <% end %>
<% else %>
  You must first <a href="/sessions/new">login</a> to post.
<% end %>